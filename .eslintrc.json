{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/prop-types": ["error", { "ignore": ["navigation"] }]
  },
  "settings": {
    "extensions": [".js", ".jsx", ".ts", ".tsx"],
    "moduleDirectory": ["node_modules", "src/"]
  }
}
